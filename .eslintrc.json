{
  "parserOptions": {
    "ecmaVersion": 11,
    "allowImportExportEverywhere": true,
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "max-len": ["error", 120],
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "prettier/prettier": "error"
  },
  "globals": {
    "Coral": false,
    "Granite": false,
    "Waypoint": true,
    "ContextHub": false
  },
  "env": {
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack.config.js"
      }
    }
  }
}
  